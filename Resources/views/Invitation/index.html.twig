{% extends '@BkstgCore/layout.html.twig' %}
{% set page_title = 'Invitations'|trans %}
{% trans_default_domain 'BkstgResourceBundle' %}
{% block main %}
  <div class="container-fluid">
    {% include '@BkstgCore/Partials/header.html.twig' with { 'title': page_title } only %}
    <p><div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>{{ 'Event'|trans }}</th>
          </tr>
        </thead>
        <tbody>
        {% for invitation in invitations %}
          <tr>
            <td>{{ invitation.event }}</td>
          </tr>
        {% else %}
            <tr>
              <td colspan="6">{{ 'invitations.no_invitations'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
      </table>
      {{ knp_pagination_render(invitations) }}
    </div></p>
    {% include '@BkstgCore/partials/footer.html.twig' %}
  </div>
{% endblock %}
