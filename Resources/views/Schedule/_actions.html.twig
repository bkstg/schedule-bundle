{% trans_default_domain 'BkstgScheduleBundle' %}

{% if is_granted('edit', schedule) %}
  {% set route = app.request.attributes.get('_route') %}
  <ul class="nav nav-tabs mb-3">
    <li class="nav-item">
      <a class="nav-link{% if route == 'bkstg_schedule_read' %} active{% endif %}" href="{{ url('bkstg_schedule_read', {'id': schedule.id, 'production_slug': production.slug}) }}">{{ 'view'|trans }}</a>
    </li>
    <li class="nav-item">
      <a class="nav-link{% if route == 'bkstg_schedule_update' %} active{% endif %}" href="{{ url('bkstg_schedule_update', {'id': schedule.id, 'production_slug': production.slug}) }}">{{ 'edit'|trans }}</a>
    </li>
    <li class="nav-item">
      <a class="nav-link{% if route == 'bkstg_schedule_delete' %} active{% endif %} text-danger" href="{{ url('bkstg_schedule_delete', {'id': schedule.id, 'production_slug': production.slug}) }}">{{ 'delete'|trans }}</a>
    </li>
  </ul>
{% endif %}
