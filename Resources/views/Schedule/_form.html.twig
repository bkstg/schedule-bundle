{% trans_default_domain 'BkstgScheduleBundle' %}

{{ form_start(form) }}
  <div class="form-row">
    <div class="col-md-2">
      {{ form_row(form.active) }}
    </div>
    <div class="col">
      {{ form_row(form.name) }}
    </div>
  </div>
  {{ form_row(form.location, {'attr': { 'class': 'google-geolocate' }}) }}
  {{ form_widget(form) }}
  <div class="form-group">
    <a href="{{ url('bkstg_calendar_production', { 'production_slug': production.slug }) }}" class="btn btn-secondary">{{ 'cancel'|trans }}</a>
    <button type="submit" class="btn btn-primary">{{ 'save'|trans }}</button>
  </div>
{{ form_end(form) }}
