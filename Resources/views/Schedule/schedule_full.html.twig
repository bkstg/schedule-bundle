<div class="schedule-wrapper">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">{{ schedule.name }}</h3>
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <td>Time</td>
              <td>Scene</td>
              <td>Actors called</td>
              <td>Notes</td>
            </tr>
          </thead>
          <tbody>
            {% for schedule_item in schedule.scheduleItems %}
            <tr>
              <td>{{ schedule_item.datetimeStart|date('F jS \\a\\t g:ia') }} to<br />
              {{ schedule_item.datetimeEnd|date('F jS \\a\\t g:ia') }}</td>
              <td>{{ schedule_item.scene|markdown }}</td>
              <td>
                <ul class="list-unstyled">
                {% for actor in schedule_item.called %}
                  {% if app.user.id == actor.id %}
                    <li><strong>{{ actor }}</strong></li>
                  {% else %}
                    <li>{{ actor }}</li>
                  {% endif %}
                {% endfor %}
                </ul>
              </td>
              <td>{{ schedule_item.notes|markdown }}</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>

    {# editor priveleges #}
    {% if is_granted('ROLE_EDITOR', null) %}
      <div class="panel-footer">
        <a class="btn btn-default" href="{{ path('bkstg_schedule_edit_schedule', { 'schedule': schedule.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> edit</a></li>
        <a class="btn btn-danger" href="{{ path('bkstg_schedule_delete_schedule', { 'schedule': schedule.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> delete</a></li>

        {% if not schedule.status %}
          <a class="btn btn-success" href="{{ path('bkstg_schedule_publish_schedule', { 'schedule': schedule.id }) }}"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> publish</a></li>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>
